# EditorConfig for Pact Rust project
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.rs]
max_line_length = 100

[*.toml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.yml]
indent_size = 2

[*.md]
max_line_length = 80
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.json]
indent_size = 2

[*.sh]
indent_size = 2